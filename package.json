{
	"name": "kalisi-www",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"update-deps": "pnpx npm-check-updates -i --format group --install always",
		"update-next": "pnpx npm-check-updates -i --format group --install always --target \"@next\"",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"build": "vite build",
		"preview": "pnpm run build && wrangler pages dev .svelte-kit/cloudflare",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"deploy": "pnpm run build && wrangler pages deploy .svelte-kit/cloudflare",
		"build-cf-types": "wrangler types && move worker-configuration.d.ts src/"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250809.0",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-cloudflare": "^7.1.3",
		"@sveltejs/kit": "^2.27.3",
		"@sveltejs/vite-plugin-svelte": "6.1.1",
		"@types/eslint": "^9.6.1",
		"@typescript-eslint/eslint-plugin": "^8.39.0",
		"@typescript-eslint/parser": "^8.39.0",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "5.38.0",
		"svelte-check": "^4.3.1",
		"tslib": "^2.8.1",
		"typescript": "^5.9.2",
		"vite": "^7.1.1",
		"wrangler": "^4.28.1"
	},
	"type": "module",
	"dependencies": {
		"@tailwindcss/vite": "4.1.11",
		"open-props": "^1.7.16",
		"tailwindcss": "4.1.11"
	}
}